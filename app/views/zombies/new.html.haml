= form_for @zombie do |f|

  - if @zombie.errors.any?
    #errors
      - @zombie.errors.full_messages.each do |message|
        .error= message

  .row
    = f.label :name
    = f.text_field :name

  .row
    = f.label :gender
    = f.text_field :gender

  .row
    = f.label :age
    = f.text_field :age

  .row
    = f.submit 'Unleash Carnage'
