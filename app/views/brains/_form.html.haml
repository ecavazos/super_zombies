= form_for @brain, :html => { :class => 'form-horizontal' } do |f|

  - if @brain.errors.any?
    .alert.alert-error
      %ul#errors
        - @brain.errors.full_messages.each do |message|
          %li.error= message

  .control-group
    = f.label :kind, :class => 'control-label'
    .controls= f.text_field :kind

  .control-group
    = f.label :size, :class => 'control-label'
    .controls= f.text_field :size

  .form-actions
